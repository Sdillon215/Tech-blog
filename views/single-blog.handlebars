<article class="post">
    <div class="title">
        <h1>{{post.title}}</h1>
        <p>{{post.post_text}}</p>
    </div>
    <div class="meta">
        by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea class="comment-body"></textarea>
    </div>

    <div>
        <button id="comment-submit" type="submit">add comment</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}