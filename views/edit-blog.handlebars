<article>
    <a class="btn btn-info" href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Blog Post
    </h2>
    <form class="edit-post-form">
        <div class="form-group">
            <input class="form-control" id="new-title" type="text" value="{{post.title}}" />
        </div>
        <div class="form-group">
        <input class="form-control" id="new-text" type="text" value="{{post.post_text}}"></input>
        </div>
        <div class="form-group">
            By you on {{format_date post.created_at}}
            |
            <a class="card-link btn btn-info" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button class="btn btn-info" id="save" type="submit">Save post</button>
        <button class="btn btn-info" id="delete" type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>

<form class="comment-form mt-2" name="edit-post">
    <div class="form-group">
        <textarea class="form-control" id="edit-comment"></textarea>
    </div>

    <div>
        <button class="btn btn-info" type="submit">add comment</button>
    </div>
</form>

{{> comments post.comments}}

