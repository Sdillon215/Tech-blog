<section>
  <h2>Create New Post</h2>

  <form class="new-post-form m-5">
    <div class="form-group">
      <label for="post-title">Blog Title</label>
      <input class="form-control" type="text" id="post-title" name="post-title" />
    </div>
    <div form-group>
      <label for="blog-text">Text</label>
      <textarea class="form-control" id="blog-text" name="blog-text"></textarea>
    </div>
    <div class="form-group">
      <button id="blog-submit" type="submit" class="btn btn-info mt-2">Create</button>
    </div>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Blog Posts</h2>
    {{#each posts as |post|}}
    <div class="post-list card mb-2">
    <div class="card-body">
      {{> blog-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link card-link btn btn-info">Edit post</a>
    </div>
  </div>
    {{/each}}
</section>
{{/if}}

